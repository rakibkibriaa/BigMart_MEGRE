<body>
    
    <div class="none ml-5">

        <h1 class="display-4 text-center pt-5 pb-5">Bundle (<%=value.length%> Items)

        </h1>
        <div class="d-flex justify-content-center">
            <p class="b"> Current discount:  <%= discount %> % </p>
        </div>
        <form action="/view_bundle_item" method="POST">
            
            <div class="d-flex justify-content-center">
                <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />
                <input class="d-inline ml-2 col-lg-3 max-width:" name = 'disc' type="text" value=<%= discount %> />
                <input type='hidden' name='subscription_id' value=<%=subscription_id %> />
                <input type='hidden' name='bundle_id' value=<%= bundle_id %> />
                <button class="btn btn-success" type="submit" name='butt' value='3'>Update Discount</button>
            </div>
        </form>
        <div class="row row-cols-md-3 g-4 ml-10 mt-10">
          
            <% for(var i=0; i < value.length;i++) {%>
                        
                <div class=" col-3 mb-5">


                <form action="/select_bundle_item" method="POST">
                    
                    <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />

                    <div class="card" name='category' style="width: 15rem">


                        <div class="d-flex justify-content-center">

                            <button class="btn" type="submit">

                                <img src="/img/product_default.png" class="rounded float-start" alt="...">

                                <div class="card-body">
                                    <input type='hidden' name='product_id' value=<%=value[i].PRODUCT_ID %> />
                                    <input type='hidden' name='subscription_id' value=<%=subscription_id %> />
                                    <input type='hidden' name='bundle_id' value=<%= bundle_id %> />
                                    <h5 class="card-title">
                                        <%= value[i].NAME %>
                                    </h5>
                                    <p class="d-inline  card-text font-weight-bold"> Quantity:</p>
                                    <input class="d-inline ml-2 col-lg-3 form-control" type="text" value=<%=value[i].QUANTITY %> />
                               
                                    <p>Price: <%= value[i].PRICE %>
                                    </p>

                                    
                                    <!--<p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                                                                                <p class="card-text"><small class="text-muted">Price: <%= value[i].PRICE %></small></p> -->
                                </div>
                               
                            </button>

                        

                        </div>

                        

                    </div>

                </form>

                <form action="/view_bundle_item" method="POST">
                    <input type="hidden" name="product_id" value = <%=value[i].PRODUCT_ID %> />
                    <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />
                    <input type='hidden' name='subscription_id' value=<%=subscription_id %> />
                    <input type='hidden' name='bundle_id' value=<%= bundle_id %> />
                    <div>
                        <button class="btn btn-danger" type="submit" name='butt' value='1'>Remove</button>
                    </div>
                </form>
        </div>

        <%} %>



    </div>


    <form action="/add_new_item" method="POST">

            <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />
            <input type='hidden' name='subscription_id' value=<%=subscription_id %> />
            <input type='hidden' name='bundle_id' value=<%= bundle_id %> />
            <div>
                <button class="btn btn-danger" type="submit" name='butt' value='1'>ADD MORE ITEM</button>
            </div>
    </form>

    <form action="/clicked_plan" method="POST">

        <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />
        <input type='hidden' name='subscription_id' value=<%=subscription_id %> />
        
        <div>
            <button class="btn btn-danger" type="submit" name='butt' value='1'>Other Bundles</button>
        </div>
    </form>

    
</body>


</head>

