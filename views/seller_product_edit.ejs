            <h1>Add Item</h1>
    
            <form action="/added_seller_edit" method = "post">
                <input type="hidden" name='user_info' value=<%=JSON.stringify(user) %> />
                <input type="hidden" name='product_id' value=<%= product_id %> />

                <input type="hidden" name="from" value="signup">
                <p>Product Name</p>
                <input type="text" name="name" id="name" placeholder="Enter Product name">
                <br>
                <p>Price</p>
                <input type="number" name="price" id = "price" placeholder="Enter price">
                <br>
                <p>Category</p>
                <input type="text" name="category" id = "category" placeholder="Enter category">
                <br>
                <p>Quantity</p>
                <input type="number" name="quantity" id = "quantity" placeholder="Enter quantity">
                <br>
                
    
                <!-- <a href="/">Sign In</a> -->
    
            
                
                <label for="img">Select image:</label>
                <input type="file" id="img" name="img" accept="image/*">
                <input type="submit" id="submit" value="Add">
           
    
        </div>


